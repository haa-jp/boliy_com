					w = (screen.width) ? (screen.width - 60) : 760;
					h = (screen.height) ? (screen.height - 100) : 540;
					myleft = (screen.width) ? (screen.width - w) / 2 : 60;
					mytop = (screen.height) ? (screen.height - h - 30) / 2 : 60;
				} else if ((pos != "center" && pos != "random") || pos == null) {
